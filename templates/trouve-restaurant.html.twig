{% extends 'base.html.twig' %}

{% block title %}{{ HEADER_title }}{% endblock %}

{# Voir le controller IndexController pour les variables Twig disponibles sur cette page #}

{% block wrapper %}
<section id="section-top">
    <ul>
        {% for restaurant in restaurants %}
            <!-- Seuls sont affichés les restaurants marqués comme publiés et dont la date de publication est inférieure à la date du jour (gérer en backend) -->
            <li><a href="{{ path('restaurant', {id: restaurant.id}) }}">{{ restaurant.name }}</a></a></li>
        {% endfor %}
    </ul>
</section>
{% endblock %}