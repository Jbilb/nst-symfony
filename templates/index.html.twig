{% extends 'base.html.twig' %}

{% block title %}{{ HEADER_title }}{% endblock %}

{# Voir le controller IndexController pour les variables Twig disponibles sur cette page #}

{% block wrapper %}
<section id="section-top">
    <!-- Récupération du restaurant favori via le cookie favorite-restaurant dans IndexController index() -->
    <h2>Restaurant favori</h2>
    {% if restaurant is not empty %}
        <a href="{{path('restaurant', {id: restaurant.id})}}">{{ restaurant.name }}</a>
    {% endif %}

    <!-- Affichage des offres -->
    <ul>
        {% for offer in offers %}
            <!-- Seules sont affichées les offres marquées comme publiés et dont la date du jour est comprise entre les dates de début et de fin de publication (gérer en backend) -->
            <li><a href="{{path('offer', {id: offer.id})}}">{{ offer.title }}</a></li> 
        {% endfor %}
    </ul>
</section>
{% endblock %}
