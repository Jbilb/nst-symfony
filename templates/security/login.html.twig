{% extends 'base_login.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block wrapper %}
<section id="section-top">
    <section class="login-section">
        <div id="container">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            
                {% if app.user %}
                    <div class="mb-3 alert-login">
                        Vous êtes connecté en tant que {{ app.user.username }}, <br>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}
            
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label for="inputEmail" class="labelTitle">Identifiant (adresse email)</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword" class="labelTitle">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <input type="submit" id='submit' value='Se connecter' >     
                <!-- <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button> -->
                
            </form>
        </div>
    </section>
</section>
{% endblock %}